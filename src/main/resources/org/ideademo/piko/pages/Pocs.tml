<html t:type="layout" title="Contacts List"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

 <body>
  <h1>Contacts</h1>
   <div align="center">
       <form t:type="Form" t:id="searchForm">
         <input t:type="TextField" t:id="searchText" size="30" value="searchText" />    
         <t:submit t:id="search" value="Search" /><t:submit t:id="clear" value="Clear/Show All" />  
  
       </form>
   </div>
  
  <div style="background-color:orange;text-align:center;font-family:Verdana, Geneva, sans-serif">      
   <t:pagelink page="poc/${editMode}">Create Record (OR Advanced Search)</t:pagelink>
  </div>
  <div align="center">
  <t:grid source="list" row="row" add="delete">
    <p:deleteCell>
      <t:actionlink t:id="delete" context="row.id">Delete</t:actionlink>
    </p:deleteCell>
    <p:nameCell>
     <t:pagelink page="poc/${editMode}" context="row.id">${row.name}</t:pagelink>
    </p:nameCell>
    <p:descriptionCell>
     ${row.description}
       <t:if test="${row.worksheetExists}">
         (<a href="${url}/${row.worksheet}" target="_blank">More...</a>)
       <p:else>
         (<t:pagelink page="poc/upload" context="row.id">Upload ...</t:pagelink>)
       </p:else>
       </t:if>
    </p:descriptionCell>
     <p:empty>
       <p>There are no Contacts (matching search criteria); you can <t:pagelink page="poc/${editMode}">add some</t:pagelink> (or <t:actionlink t:id="showAll">show all</t:actionlink>)</p>
     </p:empty>
  </t:grid>
  </div>
 </body>
</html>